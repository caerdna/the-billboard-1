@model Author

@{
    ViewData["Title"] = "Author detail";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="card">
        <div class="d-flex flex-column card-body">
            <h5 class="card-title">@Model.ToString()</h5>
            @Html.ActionLink("Edit", "Create", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-primary w-25" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-danger w-25" })

        </div>
        <div class="d-flex flex-column align-items-end card-footer">
            <div><small class="text-muted"><strong>Created at:</strong> @Model.FormattedCreatedAt</small></div>
            <div><small class="text-muted"><strong>Updated at:</strong> @Model.FormattedUpdatedAt</small></div>
        </div>
    </div>
</div>